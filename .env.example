# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost/whatsapp_shopify_bot

# Redis Configuration (for caching/sessions)
REDIS_HOST=localhost
REDIS_PORT=6379

# Your Shopify App Credentials (Get from Shopify Partners Dashboard)
SHOPIFY_API_KEY=your_shopify_app_key_here
SHOPIFY_API_SECRET=your_shopify_app_secret_here
SHOPIFY_SCOPES=read_products,read_orders,write_orders,read_customers

# Your App Base URL (where your app is hosted)
REDIRECT_URI=https://your-app-domain.com

# BitCommerce/Payment Gateway (if using)
BITCOMMERZ_TOKEN_URL=https://api.bitcommerz.com/token
BITCOMMERZ_CLIENT_ID=your_bitcommerz_client_id
BITCOMMERZ_CLIENT_SECRET=your_bitcommerz_client_secret

# Note: WhatsApp credentials are configured per-store by store owners
# Each store will provide their own Meta Business API credentials

# App Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Security
SECRET_KEY=your-super-secret-key-here-make-it-long-and-random

# Optional: Webhook Security
WEBHOOK_SECRET=your_webhook_secret_for_additional_security